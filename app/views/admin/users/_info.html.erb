<h4>ユーザー情報</h4>
<%= image_tag user.get_profile_image(100,100) %><br>
<%= image_tag user.get_favorite_drink_image(100,100) %>
<table class="table">
  <tr>
    <td>ニックネーム</td>
    <td><%= link_to user.name, admin_user_path(user) %></td>
  </tr>
  <tr>
    <td>自己紹介</td>
    <td><%= user.introduction %></td>
    </tr>
  <tr>
    <td>お気に入り<br>ドリンク</td>
    <td><%= user.favorite_drink %></td>
  </tr>
  <tr>
    <td>フォロー数</td>
    <td><%= link_to user.followings.count, admin_user_followings_path(user) %></td>
  </tr>
  <tr>
    <td>フォロワー数</td>
    <td><%= link_to user.followers.count, admin_user_followers_path(user) %></td>
  </tr>
  <tr>
    <td>ステータス</td>
    <td><%= user.user_status %></td>
  </tr>
</table>
<div class="row d-flex flex-column">
    <%= link_to "ユーザー情報編集", edit_admin_user_path(user), class:"btn btn-success w-50 my-2 mx-5" %>
</div>

