<!DOCTYPE html>
<html>
  <head>
    <title>Totonou</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navgation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user.id), class:"btn btn-primary" %>
              </li>
              <li class="nav-item">
                <%= link_to "ユーザー一覧", users_path, class:"btn btn-primary" %>
              </li>
              <li class="nav-item">
                <%= link_to "サウナ一覧", post_saunas_path, class:"btn btn-primary" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path,  method: :delete, class:"btn btn-primary" %>
              </li>
              <%= render 'public/tagsearches/tagsearch' %>
              <%= form_tag(searches_search_path, method: :get) do %>
                <%= select_tag 'range', options_for_select([['---選択してください---', ''], ['ユーザー', '1'], ['サウナ', '2']]) %>
                <%= select_tag 'search', options_for_select([["完全一致", "perfect_match"], ["部分一致", "partial_match"]]) %>
                <%= text_field_tag (:word) %>
                <%= submit_tag "検索" %>
              <% end %>
              <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"btn btn-primary" %>
              </li>
              <li class="nav-item">
                <%= link_to "ユーザー一覧", admin_users_path, class:"btn btn-primary" %>
              </li>
              <li class="nav-item">
                <%= link_to "サウナ一覧", admin_post_saunas_path, class:"btn btn-primary" %>
              </li>
              <%= render 'admin/tagsearches/tagsearch' %>
              <%= form_tag(admin_searches_search_path, method: :get) do %>
                <%= select_tag 'range', options_for_select([['---選択してください---', ''], ['ユーザー', '1'], ['サウナ', '2']]) %>
                <%= select_tag 'search', options_for_select([["完全一致", "perfect_match"], ["部分一致", "partial_match"]]) %>
                <%= text_field_tag (:word) %>
                <%= submit_tag "検索" %>
              <% end %>
              <% else %>
              <li class="nav-item">
                <%= link_to "アバウト", about_path, class:"btn btn-primary mx-1" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class:"btn btn-primary mx-1" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class:"btn btn-primary mx-1" %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
    </main>
    <footer class="bg-dark pt-5 pb-4">
    </footer>
  </body>
</html>
