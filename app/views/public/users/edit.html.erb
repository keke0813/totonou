<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card text-center font-weight-bold">
        <div class="card-header">
          <h2>ユーザー情報編集</h2>
        </dv>
        <%= form_with model: @user, url: users_information_update_path(@user) do |f| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <label for="inputImage">プロフィール画像</label><br>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </li>
            <li class="list-group-item">
              <label for="inputName">名前</label><br>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
            </li>
            <li class="list-group-item">
              <label for="inputImage">飲み物画像</label><br>
              <%= f.file_field :favorite_drink_image, placeholder: "飲み物画像", accept: "image/*" %>
            </li>
            <li class="list-group-item">
              <label for="inputFavoriteDrink">お気に入りの飲み物</label><br>
              <%= f.text_field :favorite_drink, autofocus: true, id:"inputFavoriteDrink", placeholder:"お気に入りの飲み物"%>
            </li>
          </ul>
          <div class="card-body">
            <%= f.submit "編集する" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>