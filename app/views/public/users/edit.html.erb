<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <div class="card text-center font-weight-bold">
        <div class="card-header">
          <h2>ユーザー情報編集</h2>
        </dv>
        <%= form_with model: @user, url: users_information_update_path(@user) do |f| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <label for="inputImage">プロフィール画像</label><br>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </li>
            <li class="list-group-item">
              <label for="inputName">ユーザーネーム</label><br>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前(50文字以内)"%>
            </li>
            <li class="list-group-item">
              <label for="inputIntroduction">自己紹介</label><br>
              <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介(100文字以内)"%>
            </li>
            <li class="list-group-item">
              <label for="inputImage">ドリンク画像</label><br>
              <%= f.file_field :favorite_drink_image, placeholder: "飲み物画像", accept: "image/*" %>
            </li>
            <li class="list-group-item">
              <label for="inputFavoriteDrink">お気に入りドリンク</label><br>
              <%= f.text_field :favorite_drink, autofocus: true, id:"inputFavoriteDrink", placeholder:"お気に入りの飲み物"%>
            </li>
          </ul>
          <div class="card-body">
            <%= f.submit "編集する" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>