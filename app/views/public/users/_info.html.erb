<h4>ユーザー情報</h4>
<%= image_tag user.get_profile_image(100,100) %><br>
<%= image_tag user.get_favorite_drink_image(100,100) %>
<table class="table">
  <tr>
    <td>ユーザーネーム</td>
    <td><%= link_to user.name, user_path(user) %></td>
  </tr>
  <tr>
    <td>自己紹介</td>
    <td><%= user.introduction %></td>
    </tr>
  <tr>
    <td>お気に入り<br>ドリンク</td>
    <td><%= user.favorite_drink %></td>
  </tr>
  <tr>
    <td>フォロー数</td>
    <td><%= link_to user.followings.count, user_followings_path(user) %></td>
  </tr>
  <tr>
    <td>フォロワー数</td>
    <td><%= link_to user.followers.count, user_followers_path(user) %></td>
  </tr>
</table>
<div class="row d-flex flex-column">
  <% if current_user == user %>
    <%= link_to "ユーザー情報編集", users_information_edit_path(user), class:"btn btn-primary w-50 my-2 mx-5" %>
    <%= link_to "新規投稿", new_post_sauna_path, class:"btn btn-primary w-50 my-2 mx-5" %>
    <%= link_to "いいね一覧", liked_post_saunas_user_path(current_user), class:"btn btn-primary w-50 my-2 mx-5" %>
  <% elsif user.email == "guest@example.com" %>
    <%= link_to "新規投稿", new_post_sauna_path, class:"btn btn-primary w-50 my-2 mx-5" %>
    <%= link_to "いいね一覧", liked_post_saunas_user_path(user), class:"btn btn-primary w-50 my-2 mx-5" %>
  <% else %>
    <%= render "public/relationships/btn", user: user, options: { class: ""} %>
    <%= link_to "いいね一覧", liked_post_saunas_user_path(user), class:"btn btn-primary w-50 my-2 mx-5" %>
  <% end %>
</div>

