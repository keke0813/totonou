<div class="containar">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/users/info', user: current_user %>
    </div>

    <div class="offset-md-1"></div>

    <div class="col-md-8">
      <h4>"<%= @word %>"の検索結果一覧</h4>
      <% @post_sauna.each do |post_sauna| %>
        <div class="card" style="width: 18rem;">
          <%= image_tag post_sauna.get_image %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to post_sauna.name, post_sauna_path(post_sauna)%></h5>
            <p class="card-text">説明：<%= post_sauna.impression %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">所在地：<%= post_sauna.address %></li>
            <li class="list-group-item">利用料金：<%= post_sauna.price %>円</li>
            <li class="list-group-item">カテゴリー：<%= link_to post_sauna.category, tagsearches_search_path(content:post_sauna.category)%></li>
          </ul>
          <div class="card-body">
            <div>投稿ユーザー画像：<%= image_tag post_sauna.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %></div>
            <p>ユーザーネーム：<%= post_sauna.user.name %></p>
            <span><%= link_to "#{post_sauna.post_comments.count} コメント", post_sauna_path(post_sauna.id) %></span>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>