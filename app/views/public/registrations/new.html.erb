<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header text-center font-weight-bold">
          <h3 class="mb-0">新規登録</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %></%>
            <div class="form-group">
              <label for="name">名前(ニックネーム)</label>
              <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name", placeholder: "山田太郎" %>
            </div>
            <div class="form-group">
              <label for="introduction">自己紹介</label>
              <%= f.text_field :introduction, class: "form-control", autofocus: true, autocomplete: "introduction", placeholder: "サウナ大好き！" %>
            </div>
            <div class="form-group">
              <label for="favorite_drink">お気に入りドリンク</label>
              <%= f.text_field :favorite_drink, class: "form-control", autofocus: true, autocomplete: "favorite_drink", placeholder: "水" %>
            </div>
            <div class="form-group">
              <label for="email">メールアドレス</label>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "totonou@totonou" %>
            </div>
           <div class="form-group">
              <label for="password">パスワード</label>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "例) XXXXXX" %>
            </div>
            <div class="form-group">
              <label for="password_confirmation">パスワード (確認用)</label>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "例) XXXXXX" %>
            </div>
            <div class="form-group text-center">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header text-center">
          <h3 class="mb-0">既に登録済みの方</h3>
        </div>
        <div class="card-body text-center">
          <%= render "public/shared/links" %> からログインしてください
        </div>
      </div>
    </div>
  </div>
</div>
