<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'public/users/info', user: @user %>
    </div>

    <div class="col-md-9">
      <h2>"<%= @user.name %>"フォロワー一覧</h2>
      <% if @users.exists? %>
        <%= render 'public/users/user.index', users: @users %>
      <% else %>
        <p>※フォロワーはまだいません</p>
      <% end %>
    </div>

  </div>
</div>