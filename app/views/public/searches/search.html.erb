<!--サウナ一覧 -->
<% if @range == '2' %>
  <div class="containar">
    <div class="row">

      <div class="col-md-3">
        <%= render 'public/users/info', user: current_user %>
      </div>

      <div class="col-md-9">
        <h4>サウナ一覧</h4>
        <%= render "public/post_saunas/post_sauna.index", post_saunas: @post_sauna %>
      </div>

    </div>
  </div>
<% else %>
  <!--ユーザー一覧 -->
  <div class="containar">
    <div class="row">

      <div class="col-md-3">
        <%= render 'public/users/info', user: current_user %>
      </div>

      <div class="col-md-9">
        <h4>ユーザー一覧</h4>
          <%= render 'public/users/user.index', users: @user %>
      </div>

    </div>
  </div>
<% end %>