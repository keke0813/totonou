<% if post_sauna.favorited_by?(current_user) %>
  <p class="px-2">
    <%= link_to post_sauna_favorite_path(post_sauna), method: :delete, remote: true, data: {"turbolinks" => false} do %>
      <i class="fa-solid fa-heart text-danger">
        <%= post_sauna.favorites.count %> いいね
      </i>
    <% end %>
  </p>
<% else %>
  <p class="px-2">
    <%= link_to post_sauna_favorite_path(post_sauna), method: :post, remote: true, data: {"turbolinks" => false} do %>
      <i class="fa-solid fa-heart">
        <%= post_sauna.favorites.count %> いいね
      </i>
    <% end %>
  </p>
<% end %>